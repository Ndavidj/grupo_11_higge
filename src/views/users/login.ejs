<!DOCTYPE html>
<html lang="en-es">

  <%- include('partials/head') %>

<body>
  <!-- ------------ Comienzo del HEADER  -->
  <%- include('partials/header') %>
    <!-- ------------ fin del HEADER  -->

  <!-- comienzo Main LOGIN -->
  <main class="main-login">
    <form action="/login" method="POST" class="login-form">
      <div>
        <h4 class="login-title">iniciar sesión</h4>
      </div>
      <div class="field">
        <label for="email">email</label>
        <input type="email" name="email" id="email" placeholder=" Ej. ejemplo@mail.com" />
      </div>
      <div class="field">
        <label for="password">Contraseña</label>
        <input type="password" name="password" id="password" minlength="8" maxlength="16"
          placeholder=" ingrese su Contraseña" />
      </div>
      <div class="check-remember">
        <label>
          <input type="checkbox" name="remember" value="remember" />Recordarme
        </label>
      </div>
      <div class="forgot-pass">
        <a href="#" title="¿Olvidaste tu contraseña?">¿Olvidaste tu contraseña?</a>
      </div>
      <button class="login-button" type="submit">
        <a href="/">Ingresar</a>
      </button>
    </form>
  </main>
  <!-- fin del Main LOGIN -->

 <!-- ------------ comienzo del FOOTER  -->
 <%- include('partials/footer') %>
 
 <!-- ------------ Fin del FOOTER  -->
</body>

</html>