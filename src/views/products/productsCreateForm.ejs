<!DOCTYPE html>
<html lang="es"></html>

<link rel="stylesheet" href="../css/styles.css">
<link rel="stylesheet" href="../css/styles-productsCreateForm.css">


    <%- include('../partials/head', {titleWeb: 'Formulario Creación Nuevo Producto'}) %>

    <body>
      <!-- ------------ Comienzo del HEADER  -->
      <%- include('../partials/header') %>
  <!-- ------------ Fin del HEADER  -->
  <!-- ------------ Inicio del Formulario de Creación de Producto  -->

	<h2 class="product-title">Crear nuevo Producto</h2>
    <form action="/products" method="POST">
            <div class="control-form">
              <label for="name"> Nombre del Producto Nuevo </label>
              <input type="name" id="name" class="control">
            </div>
            <div class="control-form">
                <label for="description"> Descripción </label>
                <input type="description" id="description" class="control">
              </div>
            <div class="control-form">
              <label for="price"> Precio </label>
              <input type="text" id="price" class="control">
            </div>
            <div class="control-form">
                <label for="price"> Descuento </label>
                <input type="text" id="discount" class="control">
              </div>
            <div class="control-form">
              <div>Medidas</div>
              <label>80 x 60 CM
                <input type="checkbox" name="size" value="60 x 80 CM"></label>
              <label>60 x 40 CM
                <input type="checkbox" name="size" value="60 x 40 CM"></label>
            </div>
            <div class="control-form">
                <label for="category" class="control">Categoría></label>
                <select name="category" id="category" class="control">
                <option value="">Elegí</option>
                <option value="recentlyAdded">Nuestras Novedades</option>
                <option value="on-sale">En Oferta</option>
                <option value="limitedEdition">Edición Limitada</option>
            </select>
            </div>
            <div class="control-form">
              <button href='' type="submit" class="button-form">Guardar Producto</button>
            </div>
        
          </form>

	<!-- /todos los productos -->

	<!-- footer -->
    <%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>