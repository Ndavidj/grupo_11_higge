<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head', {titleWeb: 'Formulario Creación Nuevo Producto'}) %>

    <body>
      <!-- ------------ Comienzo del HEADER  -->
      <%- include('../partials/header') %>
        <!-- ------------ fin del HEADER  -->

	<h2 class="product-title">Crear nuevo Producto</h2>
    <form action="/products" method="POST">
        <div>
            <label for="name" class="form-label">Nombre del Producto</label>
            <input type="text" id="name" name="name" placeholder="Título del producto nuevo" class="form-input">
        </div>
        <div>
            <label for="price" class="form-label">Precio del producto</label>
            <input type="number" id="price" name="price" placeholder="0000" class="form-input">
        </div>
        <div>
            <label for="discount" class="form-label">Descuento</label>
            <input type="number" id="discount" name="discount" placeholder="10%" class="form-input">
        </div>
        <div>
            <label for="size" class="form-label">Medidas Disponibles</label>
                <label>80 x 60 CM
                    <input type="checkbox" name="size" value="80 x 60 CM"></label>
                <label>60 x 40 CM
                    <input type="checkbox" name="size" value="60 x 40 CM"></label>
        </div>
        <div>
            <label for="category" class="form-label">Categoría:</label>
            <select name="category" id="category" class="form-input">
                <option value="">Elegí</option>
                <option value="recently-added">Nuestras Novedades</option>
                <option value="in-sale">En Oferta</option>
            </select>
        </div>
        <div>
            <label for="description" class="form-label">Descripción del Producto</label>
            <input type="text" id="description" name="description" placeholder="Descripción del producto nuevo" class="form-input">
        </div>
        <button type="submit" class="createButton">Guardar producto</button>

    </form>
	<!-- /todos los productos -->

	<!-- footer -->
    <%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>